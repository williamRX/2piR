{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<style>
    .cart-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .cart-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="cart-wrapper">
    <h1>Panier</h1>

    <ul>
    {% for cartItem in cart %}
        <li>
            <h2>{{ cartItem.product.name }}</h2>
            <p>{{ cartItem.product.description }}</p>
            <p>ID du panier : {{ cartItem.id }}</p>
        </li>
    {% else %}
        <li>Aucun produit dans le panier.</li>
    {% endfor %}
    </ul>
</div>
{% endblock %}