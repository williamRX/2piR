{# templates/product/new.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <style>
        h1 {
            color: #333;
            font-size: 24px;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            margin-top: 50px;
        }

        form > div {
            margin-bottom: 10px;
        }

        button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>

    <h1>Créer un nouveau produit</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit">Créer</button>
    {{ form_end(form) }}
{% endblock %}