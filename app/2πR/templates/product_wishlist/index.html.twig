{% extends 'base.html.twig' %}

{% block title %}Liste de souhaits{% endblock %}

{% block body %}
<style>
    .wishlist-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .wishlist-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="wishlist-wrapper">
    <h1>Liste de souhaits</h1>

    <ul>
    {% for wishlistItem in wishlist %}
        <li>
            <h2>{{ wishlistItem.product.name }}</h2>
            <p>{{ wishlistItem.product.description }}</p>
        </li>
    {% else %}
        <li>Aucun produit dans la liste de souhaits.</li>
    {% endfor %}
    </ul>
</div>
{% endblock %}