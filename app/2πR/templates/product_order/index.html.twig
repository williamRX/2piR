{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block body %}
<style>
    .order-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .order-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="order-wrapper">
    <h1>Liste des commandes</h1>

    <ul>
    {% for order in orders %}
        <li>
            <h2>Commande #{{ order.id }}</h2>
            <p>Produit : {{ order.product.name }}</p>
            <p>Quantité : {{ order.quantity }}</p>
        </li>
    {% else %}
        <li>Aucune commande trouvée.</li>
    {% endfor %}
    </ul>
</div>
{% endblock %}